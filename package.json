    "src",
    "!src/**/*.test.*"
  ],
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "dependencies": {
    "@types/node": "^11.12.1",
    "@types/react": "^16.8.10"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.12",
    "@types/react-dom": "^16.8.4",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "jest": "^24.7.1",
    "jest-dom": "^3.1.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-testing-library": "^6.1.2",
    "typescript": "3.4.5"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "scripts": {
    "lint": "eslint . --ext \".ts,.tsx\"",
    "watch": "tsc --watch",
    "test": "jest",
    "coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "build": "tsc"
  },
  "author": "Carlos Gines <carlos.gines.fuster@gmail.com> (https://twitter.com/_carlosgines)",
  "repository": "github:CarlosGines/react-async-utils",
