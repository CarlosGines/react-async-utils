{
  "name": "react-async-utils",
  "version": "0.5.2",
  "description": "React utils to deal with async data",
  "keywords": [
    "react",
    "reactjs",
    "async",
    "hooks",
    "utils"
  ],
  "files": [
    "lib"
  ],
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "dependencies": {
    "@types/node": "^11.9.3",
    "@types/react": "^16.8.2"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^1.3.0",
    "@typescript-eslint/eslint-plugin": "^1.3.0",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.0.1",
    "react": "^16.8.1",
    "typescript": "^3.3.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "scripts": {
    "lint": "eslint . --ext \".ts,.tsx\"",
    "test": "echo \"Error: run tests from root\" && exit 1",
    "build": "tsc"
  },
  "author": "Carlos Gines <carlos.gines.fuster@gmail.com>",
  "repository": "github:CarlosGines/react-async-utils",
  "license": "ISC",
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "eslintIgnore": [
    "lib/*"
  ]
}
